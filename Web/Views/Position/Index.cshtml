@using BLL.Models;
@model IEnumerable<PositionDto>

@{ ViewBag.Title = "Управление должностями"; }

<h2 style="text-align:center">@ViewBag.Title</h2>

<span>
	<a class='btn btn-info btn-md' style="margin-left:15px" href='@Url.Action("Create","Position")'>Добавить должность</a>
</span>
<hr />
<table class="table table-striped" id="userList">
	<thead>
		<tr>
			<th>ID</th>
			<th>Наименование должности</th>
			<th>Операции</th>
		</tr>
	</thead>
	<tbody>
		@if (Model.FirstOrDefault() != null)
		{
			foreach (var item in Model)
			{
<tr>
	<td>@item.PositionIdDto</td>
	<td>@item.NameDto</td>
	<td>
		<span>
			<a class='btn btn-success' href='@Url.Action("Update", "Position", new { id = item.PositionIdDto })'> Редактировать</a>
		</span>
		<span style='padding-left: 5px'>
			<a class='btn btn-danger' href='@Url.Action("Delete", "Position", new { id = item.PositionIdDto })'> Удалить</a>
		</span>
	</td>
</tr>}
			}
	</tbody>
</table>