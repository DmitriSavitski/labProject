@using DAL.Models;
@model IEnumerable<Users>

@{ ViewBag.Title = "Управление пользователями"; }

<h2 style="text-align:center">@ViewBag.Title</h2>

<span>
	<a class='btn btn-info btn-md' style="margin-left:15px" href='@Url.Action("Create","User")'>Добавить пользователя</a>
</span>
<hr />
<table class="table table-striped" id="userList">
	<thead>
		<tr>
			<th>ID</th>
			<th>Имя пользователя</th>
			<th>Роль</th>
			<th>Операции</th>
		</tr>
	</thead>
	<tbody>
		@if (Model.FirstOrDefault() != null)
		{
			foreach (var item in Model)
			{
<tr>
	<td>@item.UsersId</td>
	<td>@item.Login</td>
	<td>@item.Role.Name</td>
	<td>
		<span>
			<a class='btn btn-success' href='@Url.Action("Update", "User", new { login = item.Login })'> Редактировать</a>
		</span>
		<span style='padding-left: 5px'>
			<a class='btn btn-danger' href='@Url.Action("Delete", "User", new { login = item.Login })'> Удалить</a>
		</span>
	</td>
</tr>}
			}
	</tbody>
</table>